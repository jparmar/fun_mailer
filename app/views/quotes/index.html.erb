<p id="notice"><%= notice %></p>
<div class="panel panel-default" style="width: 80%;">
	<div class="panel-heading"><h3><b>Quotes</b></h3></div>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-3">
				<h4 style="color:orange;"><b>Name</b></h4>
			</div>
		</div>
		<hr>
		  <% @quotes.each do |quote| %>
		<div class="row">
			<div class="col-md-9">
				<h5><b><%= link_to "#{quote.name}", quote %></b></h5>
			</div>
			<div class="col-md-3"></div>
			<div class="col-md-1"></div>
			<div class="col-md-1">
				<%= link_to "<i class='glyphicon glyphicon-pencil'></i>".html_safe,  edit_quote_path(quote) %>
			</div>
			<div class="col-md-1">
				<%= link_to "<i class='glyphicon glyphicon-trash'></i>".html_safe ,quote, method: :delete, data: { confirm: 'Are you sure?' } %>
			</div>
				
		</div>
		  <% end %>
	</div>
	<div class="panel-footer">
		<div class="btn btn-default"><span class="glyphicon glyphicon-plus orange"></span>&nbsp;<b><%= link_to 'ADD', new_quote_path, {:style=> 'color:black;'} %></b></div>
	</div>
</div>	